<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ViewActivity">

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/edge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@color/black"
            android:onClick="onClick"
            android:id="@+id/viewAccelerate"/>

        <View
            android:layout_width="50dp"
            android:alpha="0.5"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@color/black"
            android:onClick="onClick"
            android:id="@+id/viewLinear"/>

        <TextView
            android:id="@+id/viewAlphaAnimation"
            style="@style/AnimationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Alpha" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/viewScaleAnimation"
            style="@style/AnimationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Scale" />

        <TextView
            android:id="@+id/viewTranslationAnimation"
            style="@style/AnimationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Translation" />

        <TextView
            android:gravity="center"
            android:id="@+id/viewRotateAnimation"
            style="@style/AnimationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Rotate" />

        <TextView
            android:gravity="center"
            android:id="@+id/viewSetAnimation"
            style="@style/AnimationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Set" />




    </LinearLayout>

</ScrollView>